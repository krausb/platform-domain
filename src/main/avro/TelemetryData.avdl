@namespace("io.streamarchitect.platform.domain.telemetry")
protocol TelemetryData {

  /** Metadata */
  record Meta {
    /** device id (uuid) */
    string  deviceId;
    /** session id (uuid) */
    string  sessionId;
    /** UTC timestamp of device occurence */
    long    timeOfOccurrence;
    /** UTC timestamp of platform receipt */
    long    timeOfReceipt;
  }

  /** GPS Position */
  record Position {
    /** longitude */
    double longitude;
    /** latitude */
    double lat;
    /** altitude */
    double alt;
    /** heading */
    int heading;
  }

  /** Raw Telemetry */
  record Telemetry {
    /** metadata */
    Meta meta;
    /** telemetry id */
    string telemetryId;
    /** either as double or opaque data as byte array */
    union{ double, bytes } telemetryValue;
  }

  /** Positioned Telemetry */
  record PositionedTelemetry {
    /** metadata */
    Meta meta;
    /** telemetry id */
    string telemetryId;
    /** position of the telemetry */
    Position position;
    /** either as double or opaque data as byte array */
    union{ double, bytes } telemetryValue;
  }

}